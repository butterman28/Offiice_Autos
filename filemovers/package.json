{
  "name": "filemovers",
  "version": "1.0.0",
  "description": "Konva Explorer - File management application",
  "homepage": "https://github.com/YOUR_NAME/YOUR_REPO",
  "author": {
    "name": "Your Name",
    "email": "you@example.com"
  },
  "license": "ISC",
  "main": "main.js",
  "type": "commonjs",

  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux"
  },

  "build": {
    "appId": "com.filemovers.app",
    "productName": "Konva Explorer",

    "directories": {
      "output": "dist",
      "buildResources": "public"
    },

    "asar": true,
    "npmRebuild": false,
    "compression": "maximum",

    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "public/**/*",
      "assets/**/*",
      "package.json"
    ],

    "extraResources": [],
    "extraFiles": [],

    "linux": {
      "category": "Utility",
      "maintainer": "Your Name <you@example.com>",
      "icon": "public/icon.png",
      "target": [
        "AppImage",
        "tar.gz",
        "deb"
      ]
    },

    "win": {
      "icon": "public/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },

    "mac": {
      "icon": "public/icon.icns",
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    }
  },

  "devDependencies": {
    "electron": "^39.2.3",
    "electron-builder": "^24.13.3",
    "konva": "^9.3.0"
  },

  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.5",
    "@mui/material": "^7.3.5"
  }
}
