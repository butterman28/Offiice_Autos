{
  "name": "templator-x",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "tauri": "tauri",
    "dev": "npm-run-all --parallel tailwind:watch esbuild:watch \"tauri dev\"",
    "build": "npm-run-all tailwind:build esbuild:build",
    "tauri:build": "npm run build && tauri build",
    "tailwind:watch": "tailwindcss -i ./src/input.css -o ./src/output.css --watch",
    "tailwind:build": "tailwindcss -i ./src/input.css -o ./src/output.css",
    "esbuild:watch": "esbuild src/main.js --bundle --platform=browser --format=esm --outfile=src/app.js --watch",
    "esbuild:build": "esbuild src/main.js --bundle --platform=browser --format=esm --outfile=src/app.js --minify"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "esbuild": "^0.27.2"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@tailwindcss/cli": "^4.1.18",
    "@tauri-apps/plugin-dialog": "^2.5.0",
    "mammoth": "^1.11.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.1.18",
    "xlsx": "^0.18.5"
  }
}
