{
  "name": "filecanvas",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "tauri": "tauri",
    "dev": "npm-run-all --parallel tailwind:watch \"tauri dev\"",
    "tailwind:watch": "tailwindcss -i ./src/input.css -o ./src/output.css --watch",
    "tailwind:build": "tailwindcss -i ./src/input.css -o ./src/output.css",
    "build": "npm run tailwind:build",
    "tauri:build": "tauri build"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.1.0"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.0.0"
  }
}